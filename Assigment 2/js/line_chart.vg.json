{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 200,
  "padding": {"top": 10, "left": 10, "right": 10, "bottom": 10},
  "background": "lightyellow",
  "params": [
    {
      "name": "state",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All", "Johor", "Kedah", "Kelantan", "Melaka", "Negeri Sembilan", "Pahang", 
          "Pulau Pinang", "Perak", "Perlis", "Sabah", "Sarawak", "Selangor", 
          "Terengganu", "W.P. Kuala Lumpur", "W.P. Labuan", "W.P. Putrajaya"
        ],
        "name": "Select State for Poverty Chart: "
      }
    }
  ],
  "title": {
    "text": "Poverty rate by state (1970 to 2022)",
    "anchor": "middle"
  },
  "data": {
    "url": "data/hh_poverty_state.csv",
    "format": {"type": "csv"}
  },
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
    "x": {
      "field": "date",
          "type": "ordinal",
          "title": "Year",
          "axis": {
            "labelAngle": -45
          }
    },
    "y": {
      "field": "poverty_absolute",
      "type": "quantitative",
      "title": "Absolute Poverty Rate"
    },
    "color": {
      "field": "state",
      "type": "nominal",
      "title": "States",
      "scale": {
        "range": [
          "#E69F00", "#56B4E9", "#76f59a", "#F0E442", "#0072B2", "#D55E00", "#CC79A7", "#999999",
          "#FDE725", "#35B779", "#31688E", "#440154", "#CFE11F", "#FF7F00", "#8DA0CB", "#E7298A"
        ]
      }
    },
    "tooltip": [
      {"field": "state", "type": "nominal", "title": "State"},
      {"field": "poverty_absolute", "type": "quantitative", "title": "Poverty Rate"},
      {"field": "date", "type": "ordinal", "title": "Year"}
      
    ]
  },
  "transform": [
    {"filter": "state == 'All' ? true : datum.state == state"}
  ]
}
