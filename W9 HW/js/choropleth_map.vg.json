{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Choropleth map of Gini coefficients by state",
  "width": 600,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "ne_10m_admin_1_states_provinces.json", 
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces" 
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "data/hh_inequality_state.csv" 
        },
        "key": "state",
        "fields": ["gini"]
      }
    }
  ],
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "gini",
      "type": "quantitative",
      "scale": {
        "scheme": "blues"
      }
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "gini", "type": "quantitative", "title": "Gini Coefficient"}
    ]
  }
}
