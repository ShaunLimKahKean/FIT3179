{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": "Gini coefficients by state as of 2022",
  "width": 800,
  "height": 400,
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ShaunLimKahKean/FIT3179/refs/heads/main/W9%20HW/js/ne_10m_admin_1_states_provinces.topojson",
        "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
      },
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "gini",
          "type": "quantitative",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal" },
          { "field": "gini", "type": "quantitative" }
        ]
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "data/hh_inequality_state.csv",
              "format": { "type": "csv" }
            },
            "key": "state",
            "fields": ["gini"]
          }
        }
      ]
    }
  ]
}

